<h1>Aromatics</h1>
<h2>Please type what herbs and spices you have in your kitchen. Herbs and spices include basil, parsely, cumin, chili powder etc. </h2>
<% if local_assigns.has_key? :status_msg %>
    <p><%= status_msg %></p>
<% end %>
<%= form_with scope: :aromatics, url: input_aromatics_path, method: :put do |form|%>

    <div>
        <%= label_tag ("input 1")%>
        <%= form.text_field :input1 %>
        <br><br>
    </div>
    <div>
        <%= label_tag ("input 2")%>
        <%= form.text_field :input2 %>
        <br><br>
    </div>
    <div>
        <%= label_tag ("input 3")%>
        <%= form.text_field :input3 %>
        <br><br>
    </div>
    <div>
        <%= label_tag ("input 4")%>
        <%= form.text_field :input4%>
        <br><br>
    </div>
    <div>
        <%= label_tag ("input 5")%>
        <%= form.text_field :input5 %>
    </div>

    <br>
    <%= form.submit 'Submit'%>
<% end %>

<p><%= link_to 'Back', veg_path%></p>
